@using Glass.Mapper.Sc.Web.Mvc
@model List<MySite.Models.Post>


               <div class="container">
                   <div class="input-group col-md-4">
                       <form action="" method="get">
                           <input class="form-control py-2" name="s" type="search" placeholder="find by value in title" style="float: left;" required>
                           <span class="input-group-append">
                               <button class="btn btn-outline-secondary">
                                   Find by word in title
                               </button>
                           </span>
                       </form>
                   </div>
                   <div class="clearfix" style="margin-bottom: 50px;"></div>
                   <p>Number of founded posts: @Model.Count</p>
                   @foreach (MySite.Models.Post item in Model)
                   {
                       <div class="card mb-4">
                           @Html.Glass().RenderImage(item, post => post.Image, isEditable: true, parameters: new { @class = "card-img-top", style = "width: 750px; height: 300px;" })
                           <div class="card-body">

                               <h1 class="card-title">@Html.Glass().Editable(item, post => post.Title)</h1>
                               <p class="card-text">@Html.Glass().Editable(item, post => post.Body)</p>
                               <p class="card-text">@Html.Glass().Editable(item, post => post.Category.Category)</p>


                               <p>Tags:</p>

                               @if (item.Tags != null && item.Tags.Any())
                               {
                                   <ul>
                                       @foreach (var tag in item.Tags)
                                       {
                                           <li>@tag.Tag</li>
                                       }
                                   </ul>
                               }
                                           

                               <a href="@item.UrlToPost" class="btn btn-primary">@Sitecore.Globalization.Translate.Text("Show post")</a>
                           </div>
                       </div>
                   }
               </div>


