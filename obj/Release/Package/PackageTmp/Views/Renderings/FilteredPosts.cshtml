@using MySite.Models
@model ICollection<Post>

    <div class="container">
        <p>Number of results: @Model.Count</p>
        @if (Model.Count > 0)
        {
             foreach (Post item in Model)
             {
                <!-- Blog Post -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">@item.Title</h2>
                        <a href="@item.Url" class="btn btn-primary">View post</a>
                    </div>
                </div>
            }
        }
        else {
            <p>No results</p>
        }
    </div>
    <div class="container">
       
    </div>




